<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recipe Listing</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
</head>
<body>
    <%- include('partials/header') %>
    <main class="container">
        <h1>Recipe Listing</h1>
        <input type="text" id="recipe-search" placeholder="Search recipes..." style="margin-bottom:20px;width:100%;padding:10px;">
        <% Object.keys(categorizedRecipes).forEach(category => { %>
            <div class="recipe-category">
                <h2 class="protein-header"><%= category %> Recipes</h2>
                <table class="recipe-table">
                    <tbody>
                        <% categorizedRecipes[category].forEach(recipe => { %>
                            <tr class="recipe-item">
                                <td class="recipe-title"><a href="/recipes/<%= recipe.id %>"><%= recipe.title %></a></td>
                                <td>
                                    <form action="/recipes/<%= recipe.id %>?_method=DELETE" method="POST" style="display:inline;">
                                        <button type="submit" class="delete-btn">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% }); %>
    </main>
    <%- include('partials/footer') %>
    <script src="/js/interactivity.js"></script>
</body>
</html>